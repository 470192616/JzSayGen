<?xml version="1.0" encoding="utf-8"?>

<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net" />
  </configSections>

  <log4net>
    <logger name="SysLogger">
      <level value="ALL"/>
      <appender-ref ref="RollingLogFileAppender" />
    </logger>
    <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="logs/log.txt" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="1024KB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%-5level] %F Line=%L %message%newline%newline" />
      </layout>
    </appender>
  </log4net>

  <appSettings>
    <!-- 服务器标识ID1 -->
    <add key="SERVER_PREFIX_NUM1" value="1"/>

    <add key="DB_CONN_STRING" value="Data Source=.;Initial Catalog=Weixin;Persist Security Info=True;User ID=sa;Password=abc123456"/>

  </appSettings>
    
  
  <system.web>    
    <sessionState mode="StateServer" stateConnectionString="tcpip=127.0.0.1:42424" cookieless="false" timeout="120" />    
    <httpHandlers>
      <add verb="*" path="/AjaxBin/*.ashx" type="JzSayGen.AjaxBinHttpHandlerFactory"/>
    </httpHandlers>
    <httpRuntime requestValidationMode="2.0" />
    <pages validateRequest="false" />
    <compilation debug="true" targetFramework="4.0" />
    <customErrors mode="Off"></customErrors>
  </system.web>

</configuration>
